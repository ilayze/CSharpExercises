<Window x:Class="StateApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" ResizeMode="NoResize">
    <Grid>
        <Label Content="Search for a state:" Height="28" HorizontalAlignment="Left" Margin="88,59,0,0" Name="label1" VerticalAlignment="Top" FontFamily="Verdana" Foreground="Blue" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="218,60,0,0" Name="txtSearch" VerticalAlignment="Top" Width="152" />
        <Label Content="Or choose from the list:" Height="28" HorizontalAlignment="Left" Margin="88,121,0,0" Name="label2" VerticalAlignment="Top" Foreground="Blue" FontFamily="Verdana" />
        <ListBox Height="178" HorizontalAlignment="Left" Margin="257,121,0,0" Name="listStates" VerticalAlignment="Top" Width="219" ItemsSource="{Binding Path=StatesNames}" />
        <Button Content="Go" Height="23" HorizontalAlignment="Left" Margin="197,276,0,0" Name="btnGo" VerticalAlignment="Top" Width="45" Click="btnGo_Click" />
        <Button Content="Add New" Height="23" HorizontalAlignment="Left" Margin="103,276,0,0" Name="btnAddNew" VerticalAlignment="Top" Width="75" Click="btnAddNew_Click" />
    </Grid>
</Window>
